<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

       <bean id="abstractApplication" class="com.application.AbstractApplication" abstract="true"></bean>
       <bean id="abstractApplicationWebApp" class="com.application.AbstractApplicationWebApp" abstract="true"></bean>
       <bean id="applicationWebApp" class="com.application.ApplicationWebApp">
              <property name="url" value="http://www.hotwire.com"></property>
       </bean>

</beans>